<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroActivity">

    <hu.beernotfoundexception.kolibri.view.kbv.KenBurnsView
        android:id="@+id/imgIntroBg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/background_budapest"/>

    <ImageView
        android:id="@+id/imgIntroBgOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@color/colorIntroOverlay"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgLogoBegin"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:alpha="0.0"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_colibri_colibr"
            android:tint="@color/colorSalmon"
            tools:alpha=".5"/>

        <ImageView
            android:id="@+id/imgLogoEnd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="-12dp"
            android:alpha="0.0"
            android:scaleType="fitCenter"
            android:src="@drawable/logo_colibri_bird"
            android:tint="@color/colorSalmon"
            tools:alpha=".5"
            android:layout_alignBottom="@+id/imgLogoBegin"
            android:layout_toEndOf="@+id/imgLogoBegin"
            android:layout_marginBottom="-10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linIntroControl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:alpha="0.0"
        android:orientation="vertical"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        tools:alpha=".5"
        android:layout_marginBottom="140dp">

        <Button
            android:id="@+id/btnLogin"
            style="@style/LightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Log in"/>
    </LinearLayout>

</RelativeLayout>
